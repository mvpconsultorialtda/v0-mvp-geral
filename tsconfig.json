{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/app/*": [
        "app/*"
      ],
      "@/lib/*": [
        "src/lib/*"
      ],
      "@/root-lib/*": [
        "lib/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/src/*": [
        "src/*"
      ],
      "@/modules/*": [
        "src/modules/*"
      ],
      "@/providers/*": [
        "src/providers/*"
      ],
      "@/context/*": [
        "src/context/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
